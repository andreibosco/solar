  .menu_footer
    %ul
      %li= link_to t(:login_footer1), 'http://www.virtual.ufc.br', :target => '_blank'
      %li= link_to t(:login_footer2), 'http://www.ufc.br', :target => '_blank'
      %li= link_to t(:login_footer3), "#team", :class => 'panel-link'
      %li= link_to t(:license_terms), "#license-terms", :class => 'panel-link'
      %li.choice-language
        = link_to t(:login_language), '#', :class => "link-arrow"
        %ul.choice-language-menu
          %li.language.pt_BR
            = link_to 'Português (BR)', url_for(locale: locales.first), class: ((selected == locales.first) ? "selected" : "")
          %li.language.en_US
            = link_to 'English (USA)', url_for(locale: locales.last), class: ((selected == locales.last) ? "selected" : "")

