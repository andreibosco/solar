<%= form_for @user_session, :url => {:action => "create"} do |f| %>
	<%= flash[:notice] %>
            <div id="login_form">
                <div id="login_form_tab_entrar">
                    Entrar
                </div>
                <div id="login_form_tab_cadastrar">
                    Cadastrar
                </div>

                <label for="login_form_nome">Login</label>
		<%= f.text_field :login, :id=>"login_form_nome", :class=>"login_form_text_field"%>
                <br/>
                <label for="login_form_senha">Senha</label>
		<%= f.password_field :password, :id=>"login_form_senha", :class=>"login_form_text_field" %>
                <br/>
                <div id="login_form_secundario" style="line-height: 20px;">
		    <%= f.check_box :remember_me, :id=>"login_form_lembrar_senha", :style=>"border-style:none" %>
                    <label for="login_form_lembrar_senha" class="menor">Lembrar minha senha</label>
                    <br/>
                    &nbsp;<a href="" class="menor" >esqueci a senha</a>
                </div>
		<%= f.submit "Entrar", :id=>"login_form_entrar"%>
            </div>
<% end %>
