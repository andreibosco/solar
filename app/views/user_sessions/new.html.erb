<h1>Login ::</h1>
<% form_for @user_session, :url => {:action => "create"} do |f| %>
	<%= flash[:notice] %>

    <p><%= f.label :login %>
    <%= f.text_field :login %></p>

    <p><%= f.label :password %>
    <%= f.password_field :password %></p>

    <p><%= f.check_box :remember_me %>
    <%= f.label :remember_me %></p>

    <p><%= f.submit "Login" %></p>
<% end %>
