.message_external_div
  .block_title
    %h2= @message.subject
  .block_content
    .align-left
      = link_to ({action: 'new', id: @message.id, target: 'sender'}), class: 'btn btn_main', :'data-tooltip' => t(:message_reply) do
        %i.icon-reply
      = link_to ({action: 'new', id: @message.id, target: 'all'}), class: 'btn', :'data-tooltip' => t(:message_reply_all) do
        %i.icon-reply-all
      = link_to ({action: 'new', id: @message.id, target: ''}), class: 'btn', :'data-tooltip' => t(:message_route) do
        %i.icon-forward

    .align-right
      = link_to ({:action => 'new', :search => @search_text}), :class =>'btn', 'data-tooltip' => t(:message_new) do
        %i.icon-plus-3

      - if @box != "trashbox"
        #mark_as_unread.btn{:"data-tooltip" => t(:message_mark_as_unread), :"data-new-status" => "unread", :"data-link-udpate-status" => change_status_message_path(id: @message.id, new_status: "unread")}
          %i.icon-checkmark

        #remove_message.btn{:"data-tooltip" => t(:message_delete), :"data-new-status" => "trash", :"data-link-udpate-status" => change_status_message_path(id: @message.id, new_status: "trash")}
          %i.icon-trash

      - if @box == "trashbox"
        #restore_message.btn{:"data-tooltip" => t(:message_restore), :"data-new-status" => "restore", :"data-link-udpate-status" => change_status_message_path(id: @message.id, new_status: "restore")}
          %i.icon-plus-2

    .clearfix

  .message_header_new
    .message_text_from
      %p
        %strong
          = t(".from")
          = [@sender.name, " <", @sender.email, ">"].join
    .message_text_to
      %p
        = t(".to")
        = @recipients.map{ |r| [r.nick, " <", r.email, ">"].join }.join(', ')

    - unless (attachments = @message.files).empty?
      .message_attachments
        %p
          %i.icon-paperclip
          = t(".attachments")
          - attachments.each do |file|
            %br/
            = link_to ['-', file.message_file_name].join, download_file_messages_path(file_id: file.id)

  %hr
  .message_div_show
    = sanitize @message.content

  %hr

  .message_div_navigation
    %a.btn.align-left{href: messages_path}
      %i.icon-arrow-left
      = t(:back)

:javascript

  $(function(){
    $('#remove_message, #restore_message, #mark_as_unread').click(function(){
      $.ajax({
        type: 'PUT',
        url: $(this).data('link-udpate-status'),
        success: function(response) {
          window.location.href = "#{inbox_messages_path}";
        }
      });
    });
  });
