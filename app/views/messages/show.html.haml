.message_external_div
  -#= render 'message_header'
  -#= render 'message_options'

  .block_title
    %h2= @message.subject
  .block_content
    .align-left
      = link_to ({:action => 'new', :id => @message.id, :target => 'sender'}), :class=>'btn btn_main', 'data-tooltip'=>t(:message_reply) do
        %i.icon-reply
      = link_to ({:action => 'new', :id => @message.id, :target => 'all'}), :class=>'btn', 'data-tooltip'=>t(:message_reply_all) do
        %i.icon-reply-all
      = link_to ({:action => 'new', :id => @message.id, :target => ''}), :class=>'btn', 'data-tooltip'=>t(:message_route) do
        %i.icon-forward
    .align-right
      = link_to ({:action => 'new', :search => @search_text}), :class =>'btn', 'data-tooltip' => t(:message_new) do
        %i.icon-plus-3
      %button.btn{'data-tooltip' => t(:message_mark_as_unread)}
        %i.icon-checkmark
      - if @type != "trashbox"
        = link_to(message_path(@message.try(:id) || ':id'), {id: :link_remove_message, class: 'btn', 'data-tooltip' => t(:message_delete), method: :delete, confirm: t(:message_confirm)}) do
          %i.icon-trash
      - if @type == "trashbox"
        = link_to(restore_message_path(@message.try(:id) || ':id'), {id: :link_restore_message, class: 'btn', method: :put}) do
          = t(:message_restore)
    .clearfix

  .message_header_new
    .message_text_to
      %p
        %strong
          De:
          =@sender.name + " <" + @sender.email + ">"
    .message_text_to
      %p
        Para:
        - text = ""
        - @recipients.each do |r|
          - text += r.nick + " <" + r.email + ">, "
        = text
    .message_text_to
      %p
        %i.icon-paperclip
        Anexos:
        anexo1.jpg

  %hr
  .message_div_show
    = sanitize @message.content

  %hr

  .message_div_navigation
    %a.btn.align-left{:href => "#{messages_path}"}
      %i.icon-arrow-left
      = t(:back)
    .message_page
      %i.icon-arrow-left-3
      1 de 4
      %i.icon-arrow-right-3.active
