<div class="message_external_div">
    <span class="page_title"><%= t(:message_title) %></span>

    <% if flash[:success] || flash[:error] || flash[:notice]%>
      &nbsp;<br/>
      <%=raw message %>&nbsp;
      &nbsp;<br/>
    <% end %>

    <%= render 'message_header' %>
    
    <%= render 'message_options' %>

    <div class="message_div_list">
      <% if !@messages.nil? %>
          <% if @messages.length >0 %>
            <table class="message_div_list">
              <% @messages.each do |message| %>
                <tr class="message_line">
                  <td style="width:30px"><%=check_box :id, :id => 'checkbox_message'%></td>
                  <% if message.ehlida == 't' %>
                      <% css_class = "message_read" %>
                  <% else %>
                      <% css_class = "message_unread" %>
                  <% end %>
                  <td style="width:120px"><%= link_to message.name,  {:action => 'show', :id => message.id},{:class => css_class} %></td>
                  <td><%= link_to message.subject,  {:action => 'show', :id => message.id},{:class => css_class} %></td>
                  <td style="width:30px"><%=image_tag("message_file.png",:alt=>t(:message_attach)) unless message.original_name.nil?%></td>
                  <td style="width:80px"><%= link_to l(message.send_date, :format => :short),  {:action => 'show', :id => message.id},{:class => css_class} %></td>
                </tr>
              <% end %>
            </table>
          <% else %>
            <div class="text_none"><%=t(:message_none)%></div>
          <% end %>
      <% else %>
        <div class="text_none"><%=t(:message_none)%></div>
      <% end %>
    </div>
    
    <div class="message_div_navigation">
      <%= will_paginate @messages,
                        :first_label => "#{t(:navigation_first)}",
                        :previous_label => "#{t(:navigation_previous)}",
                        :next_label => "#{t(:navigation_next)}",
                        :last_label => "#{t(:navigation_last)}",
                        :summary_label => "%d - %d t(:navigation_of) %d"%>
      &nbsp;&nbsp;&nbsp;
    </div>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    dropdown_menu();
  });
</script>