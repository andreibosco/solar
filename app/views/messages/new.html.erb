<div>
    <span class="page_title"><%= t(:message_new_title) %></span>
    
    <%= render 'message_header' %>

    <%= render 'message_options' %>

    <div class="message_header_new">
      <table border="0" cellpadding="5" cellspacing="0" width="100%">
        <tbody>
          <tr>
            <td class="message_text_to" align="right" style="width:75px"><%=t(:message_to)%></td>
            <td class="message_text_to"><%= text_field_tag  'to', '', :class=> "message_search_textbox" %></td>
          </tr>
          <tr>
            <td class="message_text_to" align="right" style="width:75px"><%=t(:message_subject)%></td>
            <td class="message_text_to"><%= text_field_tag  'subject', '', :class=> "message_search_textbox" %></td>
          </tr>
          <tr>
            <td class="message_text_to" align="right" style="width:75px">&nbsp;</td>
            <td class="message_text_to"><%= link_to t(:message_attach_file), {},{:class=>'message_link'} %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div id="div_new_message">
      <textarea id="newMessageTextBox"></textarea>
    </div>
    <!--
    message_reply
    message_reply_all
    message_route
    -->

    <div class="message_div_options_new">&nbsp;
      <%= link_to t(:message_send)+' ', {:action => 'new'}, {:class=>'message_link'} %>
      <%= link_to t(:message_discard)+' ', {:action => 'index', :type => 'index'}, {:class=>'message_link'} %>
    </div>

</div>

<script type="text/javascript">
  $(document).ready( function () {
    $('#newMessageTextBox').ckeditor({
      toolbar: 'SolarToolbar',
      resize_enabled: false
    });

  })
</script>