<%= form_for :message, :url => {:action => ''}, :html => {:id => 'message_list', :class => 'message_div_options'} do |f| %>
  &nbsp;
  <%= link_to t(:message_new)+' ', {:action => 'new', :search => @search_text}, {:class=>'message_link'} %>

  <% if (@type!="trashbox" && !@type.nil?) %>
    <ul class="message_menu_listbox">
      <li><a href="#"><%=t(:message_select)%> <%=image_tag "icon_arrow_down.png", :alt=>t(:message_move)%></a>
        <ul>
          <li><%= link_to t(:message_select_all), {}, {:class=>'message_link'}%></li>
          <li><%= link_to t(:message_select_none), {}, {:class=>'message_link'}%></li>
          <li><%= link_to t(:message_select_read), {}, {:class=>'message_link'}%></li>
          <li><%= link_to t(:message_select_unread), {}, {:class=>'message_link'}%></li>
        </ul>
      </li>
    </ul>
    <ul class="message_menu_listbox">
      <li><a href="#"><%=t(:message_move)%> <%=image_tag "icon_arrow_down.png", :alt=>t(:message_move)%></a>
        <ul>
          <li><%= link_to t(:message_trash), {}, {:class=>''}%></li>
        </ul>
      </li>
    </ul>
  <% end %>

  <% if @show_message == 'show' %>
    <% selected_id = @message.id %>
  <% else %>
    <% if @type == 'inbox' || @type == 'outbox' || @type == 'trashbox' %>
      <% selected_id = nil %>
    <% end %>
  <% end %>

  <% if @type != "trashbox" %>
    <span id="link_remove_message" class="message_link"><%=t(:message_delete)%></span>
  <% end %>

  <% if (@type!="trashbox" && !@type.nil?) %>
    <span id="link_mark_as_read" class="message_link"><%=t(:message_mark_as_read)%></span>
  <% end %>
  <% if @type!="trashbox" %>
    <span id="link_mark_as_unread" class="message_link"><%=t(:message_mark_as_unread)%></span>
  <% end %>

<% end %>

<script type="text/javascript">
  $(function($) {
     $("#link_remove_message").click(function() {
        var value = "";
        var type = "<%=@type%>";
        var search = "<%=@search_text%>";
        var checked_messages = "<%=@message.nil?%>".toLowerCase();

        if (checked_messages=="true"){
          value = "";
          $("input:checked").each(function() {
            value = value + $(this).val() + "$";
          });
          if (value!=""){
            $("#message_list").attr("action", "/messages/destroy/?id="+value+"&type="+type+"&search="+search);
            $("#message_list").submit();
          }
        }
        else{
          value = "<%=@message.id unless @message.nil?%>";
          $("#message_list").attr("action", "/messages/destroy/?id="+value+"&type=index&search="+search);
          $("#message_list").submit();
        }
     })

     $("#link_mark_as_read").click(function() {
        change_reading_status("read");
     })

     $("#link_mark_as_unread").click(function() {
        change_reading_status("unread");
     })
  });

  function change_reading_status(new_status){
      var value = "";
      var type = "<%=@type%>";
      var search = "<%=@search_text%>";
      var checked_messages = "<%=@message.nil?%>".toLowerCase();

      if (checked_messages=="true"){
        value = "";
        $("input:checked").each(function() {
          value = value + $(this).val() + "$";
        });
        if (value!=""){
          $("#message_list").attr("action", "/messages/change_indicator_reading/?id="+value+"&new_status="+new_status+"&type="+type+"&search="+search);
          $("#message_list").submit();
        }
      }
      else{
        value = "<%=@message.id unless @message.nil?%>";
        $("#message_list").attr("action", "/messages/change_indicator_reading/?id="+value+"&new_status="+new_status+"&type=index");
        $("#message_list").submit();
      }
  }
</script>