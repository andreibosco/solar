.block_wrapper 

  .block_title
    %h2= t(".title_my_chats")
  - unless @my_chats.nil?
    %table.tb_list
      %thead
        %tr.lines
          %th{align: "left"}= t(".detail")
          %th{align: "center", style: "width: 25%"}= t(".availability")
      %tbody
        - @my_chats.each do |chat|
          %tr{class: "lines #{'period_ended' if !chat.opened?}"}
            %td
              - if (chat.opened?)
                = link_to chat.title, Url_Chat+"allocationId=#{@alloc};roomId=#{chat.id}", {class: 'link_content', target: '_blank' }
                - url = Url_Chat+"allocationId=#{@alloc};roomId=#{chat.id}"
                = #link_to chat.title, "", {:onclick => "javascript:window.open('#{url}','','width=700,height=720,resizable,scrollbars,status=false'); return false", :class => 'link_content' }                
              - else
                = chat.title
                - #date = Date.new(chat.start_date, chat.start_hour) 
                = #"(#{t(:message_did_not_start)})" if chat.start_date>date
                = #"(#{t(:message_ended)})" if chat.end_date<date

              .description
                .minimun= raw(truncate chat.description, length: 200, omission: "#{content_tag(:i, nil, class: 'expand icon-ellipsis', :"data-tooltip" => t(".expand_description"))}")
                .complete.invisible
                  = chat.description
                  = content_tag(:i, nil, class: "compress icon-arrow-up-2", :"data-tooltip" => t(".compress_description"))

              - unless chat.chat_type==0 
                - students = participants(chat.id)
                %i.icon-people
                %a{:style=> "vertical-align:bottom", :"data-dropdown"=>"#students-dropdown" }= students.count.to_s + ' ' + t(:students, :scope => [:chat_rooms, :list])
                .dropdown.dropdown-tip{ :id => "students-dropdown" }
                  %ul{ :class => "dropdown-menu", :style => "overflow-y: scroll; max-height: 100px; padding: 3px; padding-top: 6px; " }
                    -students.each do |p|
                      %li{ :style => "white-space: nowrap;" }=p.name

            %td{align: "center"}
              = [l(chat.schedule.start_date.to_date), l(chat.schedule.end_date.to_date)].join(" - ")
              %br
              = [(chat.start_hour), (chat.end_hour)].join(" - ")

  - if @my_chats.count < 1
    .block_content.block_content_text= t(".message_no_chat")

  - if !@responsible
    .block_title
      %h2= t(:title_other_chats, :scope => [:chat_rooms, :list])
    - unless @other_chats.nil?
      %table.tb_list
        %thead
          %tr.lines
            %th{align: "left"}= t(".detail")
            %th{align: "center", style: "width: 25%"}= t(".availability")
        %tbody
          - @other_chats.each do |chat|
            %tr{class: "lines #{'period_ended' if !chat.opened?}"}
              %td
                = chat.title
                .description
                  .minimun= raw(truncate chat.description, length: 200, omission: "#{content_tag(:i, nil, class: 'expand icon-ellipsis', :"data-tooltip" => t(".expand_description"))}")
                  .complete.invisible
                    = chat.description
                    = content_tag(:i, nil, class: "compress icon-arrow-up-2", :"data-tooltip" => t(".compress_enunciation"))
              %td{align: "center"}
                %div= [l(chat.schedule.start_date.to_date), l(chat.schedule.end_date.to_date)].join(" - ")
                %div= [(chat.start_hour), (chat.end_hour)].join(" - ")

  - if @other_chats.count < 1
    .block_content.block_content_text= t(".message_no_chat")

=javascript_include_tag "chat_rooms"