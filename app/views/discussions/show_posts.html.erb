<div id="history-posts">
  <div>
    <table width="100%" cellpadding="0" cellspacing="0" border="0">
      <tbody>

        <% @posts.each_with_index do |post, idx| %>
          <tr class="<%= (idx % 2 == 0) ? 'post_content' : 'noclass' %>">
            <td style="overflow: auto; float: right; color: #676767; font-size: 10px;">
              <%=l post['posted'].to_time, :format => :files %>
            </td>
          </tr>
          <tr class="<%= (idx % 2 == 0) ? 'post_content' : 'noclass' %>">
            <td><%=raw post["content"] %></td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>


<style type="text/css">

  .dialog-score {
    background-color: white;
    /*border: 5px solid #1D4786;*/
  }

  .dialog-score-title {
    background-color: #E3E9FF;
    height: 50px;
  }

  tr.post_content {
    background-color: #F5F8FB;
  }
</style>