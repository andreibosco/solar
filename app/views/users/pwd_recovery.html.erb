<div style="position:absolute;height:100%;width:100%; display: table;">

  <%= render '/user_sessions/header' %>

  <!--Parte cinza-->
  <div id="login_left_col">
    <%= render '/user_sessions/menu' %>
    <p>

      <% form_tag controller=> "user", :action => "pwd_recovery_send" do %>

      <div id="sectodo" style="margin-left:36px;">
        <%=  image_tag "security.png" %>
        <span style="font-weight: bold; font-size: 20px; font-family:"Myriad Pro">Segurança</span>
        <hr style="border: none;background-color: #dedede;height: 1px; position: relative" />


        <p class="sectitle">Esqueceu a sua senha?</p>
        <p class="sectext">Para recuperar sua senha, digite o endereço de e-mail que você usa para acessar a conta do Solar.<br/>
          Nós enviaremos a nova senha para o seu e-mail em instantes.</p>
        <div id="pwdbox">
          <table border="0" class="table_sec">
            <tr>
              <td><label for="email" class="label_sec">E-mail:</label></td>
              <td><%= text_field :user, :email, :id => 'email', :tabindex=>"1"%></td>
            </tr>
            <tr>
              <td> <label for="cpf" class="label_sec">CPF:</label></td>
              <td> <%= text_field :user, :cpf, :id => 'cpf', :tabindex=>"2"%></td>
            </tr>
          </table>

          <br/>
          <%= flash[:notice] %>
          <br/>

          <div style="margin-left: 65px;margin-top: 30px; width: 550px; margin-bottom: 100px;">
            <div style="float:right; margin-right: 30px">
              <input type="button" value="Voltar" class="solar_button" onclick="document.location.href='<%=login_path%>'"/>
              <%= submit_tag "Enviar", :class=>'solar_button', :tabindex=>"3"%>
            </div>
          </div>

        </div>
      </div>


    <% end %>
    </p>

  </div>

<%#= render '/user_sessions/form_login' %>

  <%= render '/user_sessions/footer' %>
</div>
