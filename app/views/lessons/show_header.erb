<div id="lesson_area">
  <div id="lesson_header">
    <%=@curriculum_unit.name%> > <span id="lesson_name"></span>
  </div>
    <div id="lesson_content_header">
      <% lessons = session[:lessons].nil? ? nil : session[:lessons] %>

      <% if !lessons.nil? %>

        
        <div id="lesson_click_area">

          <div id="lesson_back"><a href="javascript:move(1)" border="0"><%= image_tag("lesson_left.png", :alt => '', :class => 'lesson_img_nav') %></a></div>
          <div id="lesson_next"><a href="javascript:move(2)" border="0"><%= image_tag("lesson_right.png", :alt => '', :class => 'lesson_img_nav') %></a></div>
          
          <div id="content-scroll">
            <div id="content-holder">

              <% ret = lesson_list(lessons) %>
              <% order_lesson = ret[1] %>
              <% total_lesson = ret[2] %>
              <%= raw ret[0] %>

            </div>
          </div>
          
        </div>
        
        <span id="mov_atual" class="invisible"></span>
        <span id="total_lesson" class="invisible"><%=lessons.length%></span>
        
        <div id="lesson_goto">
          <%=t(:lesson_goto)%>&nbsp;
          <%=text_field_tag 'lesson_text_goto'%>&nbsp;/&nbsp;<%=total_lesson.to_s%>&nbsp;
          <span><a href="javascript:goto_lesson()" border="0"><%=image_tag("lesson_goto.png", :alt=>t(:lesson_goto),  :class => "lesson_img_nav")%></a></span>
        </div>

      <% end %>
    </div>

  <% atual_lesson = session[:opened_lesson].nil? ? nil : Lesson.find(session[:opened_lesson])%>
</div>

<script type="text/javascript">  
  window.parent.frame_lesson_content.location.href = "<%=atual_lesson.address%>";
  $("#lesson_name").html("<%=t(:lesson)+ ' '+order_lesson.to_s+' / '+total_lesson.to_s%>");
  $("#mov_atual").html("<%=order_lesson%>");
  move(0);
</script>