= javascript_include_tag "edition.js"

%span.form_requirement= t(:required_fields)

.lesson_form
  =simple_form_for(@lesson, :html => {:id => "lesson_form"}) do |f| 

    .form-inputs.block_content
      =#f.association :curriculum_unit_type, :collection => CurriculumUnitType.all(:order => 'description').map {|a| [a.description, a.id] }, :include_blank => false 
      =f.input :name
      =#f.input :passing_grade, :input_html => { :min => 0, :max => 10, :step => 0.5 }
      =#f.input :objectives, :class => "btn btn_default"

    .block_content.form-actions
      =button_tag t(:save, :scope => [:discussion, :buttons]), :class => "btn btn_main", :alt => t(:save, :scope => [:discussion, :buttons]), :onclick => "javascript:submit_form('curriculum_unit_form', 'curriculum_unit_form', 'curriculum_unit');", :type => "button"
      =button_tag t(:cancel, :scope => [:discussion, :buttons]), :class => "btn btn_default", :onclick => "removeLightBox();", :type => "button", :alt => t(:cancel, :scope => [:discussion, :buttons])
