<div id="login_right_col">
  <%= form_for(resource_name) do |f| %>
    <div id="login_form_header">
      <span id="login_form_tab_login">
        <%= t(:sign_in) %>
      </span>
      <span id="login_form_tab_register">
        <%= link_to t(:sign_up), new_registration_path(resource_name) %>
      </span>
    </div>
    <div id="login_form">
      <label for="login"><%= t(:user) %></label>
      <%= f.text_field :login, :id => "login", :class => "login_form_text_field", :tabindex => "1" %>
      <label for="password"><%= t(:password) %></label>
      <%= f.password_field :password, :id => "password", :class => "login_form_text_field", :tabindex => "2"%>
      <div id="login_form_remember">
        <%= link_to t(:forgot_my_password), new_password_path(resource_name), :class => "black" %>
      </div>
      <div id="login_form_submit">
        <%= f.submit t(:sign_in), :class => "solar_button", :id => "user_submit", :tabindex => "3" %>
      </div>
    </div>
  <% end %>

  <div id="login_locale">
    <%= image_tag "locales.png" %>
    <%= link_to "English", url_for(:locale => 'en-US') %>
    <%= link_to "PortuguÃªs(BR)", url_for(:locale => 'pt-BR') %>
  </div>

</div>