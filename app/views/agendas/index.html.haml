%div
  - @schedule.each do |schedule|
    / = schedule
    - if @link
      %div= link_to schedule["name"], list_agendas_path(allocation_tags_ids: @allocation_tags, bread: 'menu_agenda', start_date: schedule["start_date"], end_date: schedule["end_date"]), {class: 'agenda_ajax'}
    - else
      %span.agenda_ajax= schedule["name"]
  - if @schedule.first.nil?
    %span.agenda_ajax= t(:no_events)
  - else
    = link_to t(:curriculum_access_more), list_agendas_path(allocation_tags_ids: @allocation_tags, bread: 'menu_agenda'), {class: 'schedule_link_more'}
