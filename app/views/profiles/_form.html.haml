/ = javascript_include_tag 'autocomplete'

= simple_form_for @profile, html: {id: "profile_form"} do |f|

  .form-inputs.block_content 
    = f.input :name, "data-limit" => 250
    = f.input :description, "data-limit" => 400
    = f.input :template, collection: Profile.all_except_basic, prompt: t(".select_template"), html_options: {maxlength: 100}

    .form-actions.right_buttons
      = button_to_function t(:cancel), "jQuery.fancybox.close()", class: "btn btn_default btn_lightbox", type: "button" 
      = button_to_function t(:save), "profile_save()", class: "btn btn_main btn_lightbox", alt: t(:save), type: "button"

:javascript

  function profile_save(){
    $('form#profile_form').serialize_and_submit({
      replace_list: $('.list_profiles')
    });
  }