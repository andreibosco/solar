- unless @all_profiles.blank?
  %table.tb_list.list_profiles{"data-link-list" => profiles_path(list: true)}
    %thead
      %tr.lines
        %th= t(:name)
        %th= t(:description)
        %th.no_sort{style: 'width:110px'}
    %tbody
      - @all_profiles.each do |profile|
        %tr.lines
          %td= profile.name
          %td= profile.description
          %td{style: 'align:right'}
            = link_to_function content_tag(:i, nil, class: 'btn icon-lock'), "open_administration(this)", :"data-tooltip" => t(".permissions"), :"show-link" => permissions_profile_path(profile)
            = link_to_function content_tag(:i, nil, class: 'btn icon-edit'), "open_administration(this)", :"data-tooltip" => t(".edit"), :"show-link" => edit_profile_path(profile)
            = link_to content_tag(:i, nil, class: 'btn icon-trash'), "#", class: 'del_profile', :"data-link-delete" => profile_path(profile), :'data-tooltip' => t(".delete")

:javascript

  $(function(){
    $('.del_profile').click(function(e){
      e.preventDefault();
      $(this).nice_delete();
    });
  });
