<% if @amount.to_i > 0 %>
  <%= link_to @amount, {:controller => :scores, :action => :history_access, :student_id => @student_id}, :class => 'content' %>
<% else %>
  <%= @amount %>
<% end %>

<!-- atualizando datas -->
<script type="text/javascript">
  $(function(){
    $('#from-date').val('<%=l @from_date, :format => :datepicker %>');
    $('#until-date').val('<%=l @until_date, :format => :datepicker %>');
  });
</script>