.block_wrapper
  .block_title
    %h2
      %i.icon-suitcase
      = t(:group)
      = @group.code

  / Lista dos alunos com notas

  %div.tb_list_studantes
    %table.tb_list#list_of_studantes{:cellspacing => "0", :border => "0", :summary => "lista de estudantes"}
      %thead
        %tr.lines
          %th{:rowspan => "2", :align => "left", :id => "texte2"}= t(:student)
          %th{:rowspan => "2", :colspan => "2", :id=>"public_files"}= t(:public_files)
          %th{:rowspan => "2"}= t(:participation)
          %th{:rowspan => "2"}= t(:access_to_the_course)
        %tr#activities
        - @students.each_with_index do |student, idx|
          %tr.lines
            %td.td_student{:align => "left", :colspan => "2"}= link_to student.name, student_scores_path(student.id)
            %td{:align => "center", :colspan => "1"}= @scores["student_count_public_files"][idx]
            %td{:align => "center"}= "-"
            %td{:align => "center"}= @scores["student_count_access"][idx]


  %div.tb_list_jobs
    %table.tb_list#list_of_studantes{:cellspacing => "0", :border => "0", :summary => "lista de estudantes"}
      %thead
        %tr.lines
          %th{:colspan => "#{@assignments.length}", :style => "width: 20%;", :id => "tests"}= t(:private_area)
        %tr#activities
          - unless @assignments.empty?
            - @assignments.each_with_index do |assignment, idx|
              %th{'data-tooltip' => t(assignment.name)}= "#{idx + 1}"
        - @students.each_with_index do |student, idx|
          %tr.lines
            - @assignments.each_with_index do |assignment, idx2|
              - grade = @scores["students_grades"][idx][idx2]
              - grade_link = t("assignment_#{grade}", :default => grade)
              %td{:align => "center", :class => "assignment_#{grade}"}
                - if grade == "without_group"
                  = link_to t(:assignment_wg), information_assignment_path(assignment.id)
                - else
                  = link_to grade_link, student_assignment_path(assignment.id, :student_id => student.id, :group_id => @scores["students_groups"][idx][idx2]) 
            - if @assignments.empty?
              %td{:align => "center"}= "-"

/ Legenda das notas
