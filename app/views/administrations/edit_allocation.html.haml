%td= allocation_details(a.allocation_tag)
%td= type(a.allocation_tag)
%td= #select(:status, :id, @status_hash.invert.to_a, {selected: a.status})
%td.right_buttons
  = button_to_function t(".save"), "save_allocation(this)", :"allocation-id" => @allocation.id, :"save-link" => allocation_path(@allocation), class: "btn btn_main btn_save_allocation"
  = button_to_function t(".cancel"), "manage_cancel(this)", :"show-link" => allocations_user_administrations_path(@allocation), :"edit-link" => edit_allocation_path(@allocation), class: "btn btn_default btn_manage_cancel"
  
:javascript
  eval("#{show_flash}")
