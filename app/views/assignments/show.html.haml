.show_assignment
  %h1#lightBoxDialogTitle= "Show"

  .form-inputs.block_content
    .input
      = label_tag t(".name")
      %span= label_tag @assignment.name
    .input
      = label_tag t(".enunciation")
      %span= label_tag @assignment.enunciation

    - types = {:"#{t(:individual, scope: [:assignment, :list])}" => Assignment_Type_Individual, :"#{t(:group, scope: [:assignment, :list])}" => Assignment_Type_Group}
    .input
      = label_tag t(".type_assignment")
      %span= label_tag types.index(@assignment.type_assignment), nil, class: "label_right"

    .input
      = label_tag t(".start_date")
      %span= label_tag l(@assignment.schedule.start_date.to_date, format: :datepicker)
    .input
      = label_tag t(".end_date")
      %span= label_tag l(@assignment.schedule.end_date.to_date, format: :datepicker)

    .schedule_dates
      .left
        .input
          = label_tag t(".files")
      .right
        - files = @assignment.enunciation_files
        - unless files.empty?
          -files.each do |f|
            = f.attachment_file_name
            %br
        - else
          = t(".empty_files")

    .schedule_dates
      .left
        .input.group_label.invisible
          = label_tag t(".groups")
          %span.groups
            - @groups_codes.each do |group_code|
              %span.collection_check_boxes= group_code

    .schedule_dates{style: "float: right;"}
      .right.right_buttons
        = button_to_function t(:cancel), "jQuery.fancybox.close()", class: "btn btn_default btn_lightbox", type: "button"

= javascript_include_tag "schedule_events"
