<% if flash[:success] || flash[:error] || flash[:notice]%>
  &nbsp;<br/>
  <%=raw message %>&nbsp;
  &nbsp;<br/>
<% end %>
&nbsp;

<style type="text/css">

  .portfolio_activity {
    width: 500px;
  }

  .portfolio_activity_mright {
    margin-right: 20px;
  }

</style>

<!-- Apresenta o nome da unidade curricular -->

<div>
  <span class="page_title">
    Correcao de Trabalho de Atividade I de Quimica I
  </span>
</div>

<!-- Portfolio -->
<div class="portfolio_activity">

  <div class="portfolio_header_content">
    <div class="portfolio_title"><%= @student.name %></div>
    <div class="portfolio_image"><%= image_tag "icon_suitcase_portfolio.png", :alt=>t(:portfolio_icon) %></div>
  </div>

  <!-- Arquivos do aluno e comentarios -->

  <div id="portfolio" class="portfolio portfolio_activity">
    <hr class="portfolio_line portfolio_activity" />

    <!-- Arquivos de trabalho -->
    <div style="padding-left: 10px; padding-right: 10px;">
      <div id="div_header" style="padding-bottom: 10px;">
        <div id="header_left" style="float: left;">Arquivos do trabalho:</div>
        <div id="header_rigth" style="float: right; padding-right: 50px;">Nota:</div>
      </div>
      <br />
      <div id="div_body_pa">
        <div id="div_body_left" style="display: inline-block;">

          <div class="list_files" style="padding-bottom: 10px; text-align: right;">
            <div class="name_files">nome do arquivo do primeiro trabalho 1.pdf</div>
            <div class="date_files"><span style="font-style: italic; color:  gray;">Enviado em 2011/02/02</span></div>
          </div>
          <div class="list_files" style="padding-bottom: 10px; text-align: right;">
            <div class="name_files">nome do arquivo trabalho 2 - 1.pdf</div>
            <div class="date_files"><span style="font-style: italic; color:  gray;">Enviado em 2011/02/02</span></div>
          </div>
          <div class="list_files" style="padding-bottom: 10px; text-align: right;">
            <div class="name_files">nome do arquivo 1.pdf</div>
            <div class="date_files"><span style="font-style: italic; color:  gray;">Enviado em 2011/02/02</span></div>
          </div>

        </div>
        <div id="div_body_right" style="float: right;">
          <input type="text" value="8" size="5"/>
        </div>
      </div>
    </div>

    <div style="padding-bottom: 10px; padding-left: 10px;">

      <!-- comentarios sobre o trabalho enviado -->
      <span>Comentarios sobre o trabalho enviado:</span><br /><br />
      <div id="teachers_comments" style="text-align: center; padding-bottom: 10px;">
        <textarea rows="10" cols="50" style="width: 450px;"></textarea>
      </div>
      <span class="portfolio_activity_mright" style="float: right;">
        <span style="padding-right: 10px;"><a href="#">Voltar</a></span>
        <span><a href="#">Salvar</a></span>
      </span>
      &nbsp;
    </div>

  </div>

  <!-- Inserir anexos aos comentarios -->

  <div class="portfolio_header_content">
    <div class="portfolio_title">Inserir anexos ao comentario</div>
    <div class="portfolio_image"><%= image_tag "icon_suitcase_portfolio.png", :alt=>t(:portfolio_icon) %></div>
  </div>

  <div id="attachments">

    <div id="portfolio" class="portfolio portfolio_activity">
      <hr class="portfolio_line portfolio_activity" />

      <div id="list_files_sent">
        <table border="0" width="70%" cellspacing="0" cellpadding="0" style="padding-bottom: 10px; padding-top: 10px;">
          <tbody>
            <tr>
              <td align="right">
                <div id="files_list">
                  <span>nome arquivo mutio grande mesmo.pdf</span><br />
                  <span style="font-style: italic; color: gray;">Enviado em 2011-05-01</span>
                </div>
              </td>
              <td align="left" style="float: left; margin-left: 10px; margin-top: 2px;">
                <a href="#">Excluir</a>
              </td>
            </tr>
            <tr>
              <td align="right">
                <span>arquivo1.pdf</span><br />
                <span style="font-style: italic; color: gray;">Enviado em 2011-05-01</span>
              </td>
              <td align="left" style="float: left; margin-left: 10px; margin-top: 2px;">
                <a href="#">Excluir</a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <br />
      <div id="send_file">
        <span class="alter_photo_text"><%= t(:your_computer) %></span>

        <%= form_for(:portfolio_professor, :html => { :multipart => true }, :url => {:action => 'upload_files_public_area', :curriculum_unit_id => params[:id]}) do |f| %>
          <%= f.file_field :attachment%>
          <br />
          <div class="alter_photo_text"><%=raw t(:send_file_portfolio_obs)%></div><br />
          <div class="alter_photo_text"><%=raw t(:send_file_portfolio_text)%></div>
          <div style="float: right; padding-bottom: 10px; padding-right: 10px;">
            <%= f.submit t(:send) %>
          </div><br /><br /><br />
        <% end %>
      </div>

    </div>

  </div>

</div>