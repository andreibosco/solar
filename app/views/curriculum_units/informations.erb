<div class="block_wrapper">
  
  <div class="block_title">
    <h2><%= image_tag "icon_curriculum_unit.png", :alt=>t(:icon_curriculum_unit), :class=>(:block_title_icon) %><%= t(:curriculum_unit_information_title) %></h2>
  </div>

  <table class="tb_list" border="0" cellpadding="0" cellspacing="0" width="100%">
    <tbody>
      <tr class="lines">
        <td style="width: 20%;"><%= t(:syllabus) %></td>
        <td><%= @curriculum_unit.syllabus %></td>
      </tr>
      <tr class="lines">
        <td><%= t(:objectives) %></td>
        <td><%= @curriculum_unit.objectives %></td>
      </tr>
      <tr class="lines">
        <td><%= t(:prerequisites) %></td>
        <td><%= @curriculum_unit.prerequisites %></td>
      </tr>
      <tr class="lines">
        <td><%= t(:resume) %></td>
        <td><%= @curriculum_unit.resume %></td>
      </tr>
      <% unless @offer.nil? %>
        <tr class="lines">
          <td><%= t(:semester_date) %></td>
          <td><%= l @offer.start %> - <%= l @offer.end %></td>
        </tr>
      <% end %>
      <tr class="lines">
        <td><%= t(:passing_grade) %></td>
        <td><%= @curriculum_unit.passing_grade %></td>
      </tr>
      <tr class="lines">
        <td><%= t(:curriculum_unit_responsible) %></td>
        <td>
          <% if @responsible %>
            <% @responsible.each do |resp| %>
              <%=resp.name + ' (' + resp.profile_name + ') '%><span><%= link_to (image_tag "icon_message.png", :alt=>t(:icon_send_email)) %></span><br/>
            <% end %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
  
</div>
