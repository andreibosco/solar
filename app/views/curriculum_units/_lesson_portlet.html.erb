<%
#Portlet da Unidade Curricular que exibe as aulas.
%>
 <div class="curriculum_unit_portlet_lesson">
    <div class="curriculum_unit_portlet_header">
      <span><%= image_tag "icon_lesson.png", :alt=>t(:icon_lesson) %></span>
      <%= t(:curriculum_access_lesson) %>
    </div>
    <div class="curriculum_unit_portlet_lesson_content">
      <% if !(@lessons.nil? || @lessons.empty?) %>
        <% @lessons.each do |lesson| %>
          <div class="curriculum_unit_portlet_line">
            <span class="curriculum_unit_portlet_gray"><%= l lesson.start %> - <%= l lesson.end %></span>
            <a class="curriculum_unit_portlet_link" href="javascript:show_lesson('/lessons/show?id=<%=@curriculum_unit.id%>&l=<%=lesson.lessonid%>')"><%=lesson.name%></a>
          </div>
        <% end %>
      <% else %>
        <div class="curriculum_unit_portlet_text"><%= t(:lesson_message) %></div>
      <% end %>
    </div>
  </div>