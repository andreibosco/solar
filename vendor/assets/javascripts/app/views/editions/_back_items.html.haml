.block_wrapper
  = link_to t(:back), items_editions_path, {class: "btn", id: "back"}

:javascript
  $(".back").addClass("invisible");

  $("#back").click(function(){
    erase_flash_messages();

    var data = {
      course_id: $("#course").combobox("value"),
      curriculum_unit_id: $("#curriculum_unit").combobox("value"),
      semester_id: $("#semester").combobox("value"),
      groups_id: $('[name="group[group_id][]"]:checked').map(function(){ return $(this).val() }).toArray(),
      all_groups_ids: $('input#all_groups_ids').val()
    };

    $.get($(this).attr("href"), data, function(data){ $(".edition_items").replaceWith(data); });
    $(".back").addClass("invisible");
    return false;
  });
